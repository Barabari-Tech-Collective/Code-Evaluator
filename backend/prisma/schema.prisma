generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  STUDENT
  FACILITATOR
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  role      Role?
  createdAt DateTime @default(now())

  student   Student?
  teacher   Teacher?
}

model College {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  students  Student[]
  teachers  TeacherCollege[]
  assignments Assignment[]
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String
  course    String
  createdAt DateTime @default(now())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  collegeId String
  college   College  @relation(fields: [collegeId], references: [id])
}

model Teacher {
  id        String           @id @default(uuid())
  name      String
  userId    String           @unique
  user User @relation(fields: [userId], references: [id])
  colleges  TeacherCollege[]
  assignments Assignment[]
  createdAt DateTime         @default(now())
}

model TeacherCollege {
  id        String   @id @default(uuid())
  teacherId String
  collegeId String

  teacher Teacher @relation(fields: [teacherId], references: [id])
  college College @relation(fields: [collegeId], references: [id])

  @@unique([teacherId, collegeId])
}


model Assignment {
  id             String   @id @default(cuid())
  title          String
  type           String
  subject        String
  evaluatorType  String
  instructionUrl String
  rubrics        String
  deadline       DateTime
  createdAt      DateTime @default(now())

  collegeId      String
  college        College  @relation(fields: [collegeId], references: [id])

  teacherId      String
  teacher        Teacher  @relation(fields: [teacherId], references: [id])
}
