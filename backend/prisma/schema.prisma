generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  STUDENT
  FACILITATOR
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  role      Role?
  createdAt DateTime @default(now())

  student   Student?
  teacher   Teacher?
}

model College {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  students  Student[]
  teachers  TeacherCollege[]
  assignments Assignment[]
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String
  course    String
  createdAt DateTime @default(now())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  collegeId String
  college   College  @relation(fields: [collegeId], references: [id])
  submissions Submission[]
}

model Teacher {
  id        String           @id @default(uuid())
  name      String
  userId    String           @unique
  user User @relation(fields: [userId], references: [id])
  colleges  TeacherCollege[]
  assignments Assignment[]
  createdAt DateTime         @default(now())
}

model TeacherCollege {
  id        String   @id @default(uuid())
  teacherId String
  collegeId String

  teacher Teacher @relation(fields: [teacherId], references: [id])
  college College @relation(fields: [collegeId], references: [id])

  @@unique([teacherId, collegeId])
}

model Assignment {
  id             String   @id @default(cuid())
  title          String
  type           String
  subject        String
  evaluatorType  String   // JS | RUBRIC | AI

  instructionUrl String
  rubrics        Json?    // for rubric evaluators
  testcases      Json?    // for JS evaluator

  deadline       DateTime
  createdAt      DateTime @default(now())

  collegeId      String
  college        College  @relation(fields: [collegeId], references: [id])

  teacherId      String
  teacher        Teacher  @relation(fields: [teacherId], references: [id])

  submissions    Submission[]
}

model Submission {
  id            String   @id @default(cuid())

  assignmentId  String
  assignment    Assignment @relation(fields: [assignmentId], references: [id])

  studentId     String
  student       Student  @relation(fields: [studentId], references: [id])

  s3Key         String
  fileName      String
  fileSize      Int
  mimeType      String

  version       Int      @default(1)

  status        String   @default("PENDING") 
  // PENDING | PROCESSING | EVALUATED | FAILED

  submittedAt   DateTime @default(now())

  evaluations   Evaluation[]

  @@unique([assignmentId, studentId])
}

model Evaluation {
  id            String   @id @default(cuid())

  submissionId  String
  submission    Submission @relation(fields: [submissionId], references: [id])

  evaluatorType String   // JS | RUBRIC | AI

  totalScore    Float
  maxScore      Float?

  feedback      String?

  rubricBreakdown Json?   // for rubric evaluator
  rawResponse     Json?   // store original evaluator response

  evaluatedAt   DateTime @default(now())
}