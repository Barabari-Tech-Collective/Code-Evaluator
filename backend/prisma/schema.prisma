generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  STUDENT
  FACILITATOR
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  role      Role?
  createdAt DateTime @default(now())

  student   Student?
  teacher   Teacher?
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String
  college   String
  course    String
  createdAt DateTime @default(now())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}

model Teacher {
  id        String   @id @default(uuid())
  name      String
  colleges  String[]   // multiple colleges
  createdAt DateTime @default(now())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}
